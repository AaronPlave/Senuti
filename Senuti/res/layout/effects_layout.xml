<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnAudioTrackBack"
        android:layout_width="118dp"
        android:layout_height="116dp"
        android:layout_alignBottom="@+id/btnAudioTrackPause"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnAudioTrackPause"
        android:text="@string/atBack" />
    
   <Button
        android:id="@+id/btnChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAudioTrackPause"
        android:layout_toRightOf="@+id/btnRandom"
        android:text="@string/choose" />
    

    <Button
        android:id="@+id/btnAudioTrackPlay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/atPlay" />

    <Button
        android:id="@+id/btnAudioTrackPause"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnAudioTrackPlay"
        android:text="@string/atPause" />

    <SeekBar
        android:id="@+id/pitchSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:progress="50" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toggleReverse"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="34dp"
        android:text="@string/reverse" />

    <Switch
        android:id="@+id/toggleReverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pitchSlider"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pitchSlider"
        android:layout_alignRight="@+id/toggleReverse"
        android:layout_marginBottom="14dp"
        android:text="@string/pitch_control"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnAudioTrackPlay"
        android:text="@string/random" />

    <ProgressBar
        android:id="@+id/decodingSpinner"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toggleReverse"
        android:layout_toRightOf="@+id/btnAudioTrackPause" />

</RelativeLayout>